{{page-title "Wallet"}}

<div class="content">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title"> Holdings </h4>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
              <tr>
                <th class="text-center">#</th>
                <th>Type</th>
                <th>Wallet Address</th>
                <th>Amount</th>
              </tr>
              </thead>
              <tbody>
                <tr>
                  <td class="text-center">
                    <img src="{{rootURL}}assets/img/logo/tfuel.png"
                         class="img-fluid rounded-circle" style="width: 20px;">
                  </td>
                  <td>TFUEL</td>
                  <td>
                    <a href="https://explorer.thetatoken.org/account/{{@model.account}}">
                    {{@model.account}}
                    </a>
                  </td>
                  <td>{{@model.balance.coins.tfuelwei}}</td>
                </tr>
                <tr>
                  <td class="text-center">
                    <img src="{{rootURL}}assets/img/logo/theta.png"
                         class="img-fluid rounded-circle" style="width: 20px;">
                  </td>
                  <td>THETA</td>
                  <td>
                    <a href="https://explorer.thetatoken.org/account/{{@model.account}}">
                      {{@model.account}}
                    </a>
                  </td>
                  <td>{{@model.balance.coins.thetawei}}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
