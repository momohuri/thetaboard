<div class="card">
  <div class="card-header">
    <h4 class="card-title">Transactions</h4>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="text-center">TXN Hash</th> 
            <th class="text-center d-sm-none d-md-table-cell">Block</th>
            <th class="text-center d-sm-none d-md-none d-lg-table-cell">Age</th>
            <th class="text-center d-sm-none d-md-none d-lg-none d-xl-table-cell">From</th>
            <th class="text-center"></th>
            <th class="text-center d-sm-none d-md-none d-lg-none d-xl-table-cell">To</th>
            <th class="text-center">Value</th>
          </tr>
        </thead>
        <tbody>
          {{#each transactionList as |transaction|}}
            <tr>
            <td class="text-center">
              <a class="a-elipsis" href="https://smart-contracts-sandbox-explorer.thetatoken.org/txs/{{transaction.txn_hash}}">{{transaction.txn_hash}}</a>
            </td>
            <td class="text-center d-sm-none d-md-table-cell">{{transaction.block}}</td>
            <td class="text-center d-sm-none d-md-none d-lg-table-cell">{{moment-from transaction.timestamp}}</td>
            <td class="text-center d-sm-none d-md-none d-lg-none d-xl-table-cell">
              <a class="a-elipsis" href="https://smart-contracts-sandbox-explorer.thetatoken.org/account/{{transaction.from_wallet_address}}">
                {{transaction.from_wallet_address}}
              </a>
            </td>
            <td class="text-center" id="in-or-out"><img src="assets/img/transaction-{{transaction.in_or_out}}.png"/></td>
            <td class="text-center d-sm-none d-md-none d-lg-none d-xl-table-cell">
              <a class="a-elipsis" href="https://smart-contracts-sandbox-explorer.thetatoken.org/account/{{transaction.to_wallet_address}}">
                {{transaction.to_wallet_address}}
              </a>
            </td>
            <td class="text-left" style="min-width: 245px;">
              {{#each transaction.value as |coin|}}
                <div>
                  <img src="assets/img/logo/{{coin.type}}.png" class="img-fluid rounded-circle" style="width: 20px;"/>
                  <span class="coin-amount">{{format-number coin.amount}} <span class="capitalize">{{coin.type}}</span> </span>
                  <span class="coin-value">[{{format-number coin.value style='currency' currency='USD'}}]</span>
                </div>
              {{/each}}
            </td>
          </tr>
          {{else}}
            <p>No transactions</p>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
