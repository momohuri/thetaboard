<div class="card card-user card-status">
    <div class="card-body">
        <p class="card-text"></p>
            <!-- Define a new accordion-list -->
            {{#accordion-list as |accordion|}}
                <!-- For each element in list create an 'accordion.item' -->
                {{#accordion.item as |accordionItem|}}
                <!-- Create a 'toggle' and a 'panel' for the item -->
                {{#accordionItem.toggle}}
                    {{guardian-status/guardian-status-header}}
                {{/accordionItem.toggle}}
                <div class="card-status-body">
                    <!-- Clicking on the 'toggle' will display the contents of the 'panel' -->
                    {{#accordionItem.panel}}
                        {{guardian-status/guardian-status-body}}    
                    {{/accordionItem.panel}}
                    <div class="card-footer-actions">
                        {{guardian-status/guardian-status-footer}}
                    </div>
                </div>
            {{/accordion.item}}
        {{/accordion-list}}
    </div>
</div>
