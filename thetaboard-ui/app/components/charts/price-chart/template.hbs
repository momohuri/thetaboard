<div class="card card-chart">
  <div class="card-header ">
    <div class="row">
      <div class="col-sm-6 text-left">
        <h2 class="card-title forecast-title">Theta/Tfuel Price</h2>
      </div>
      <div class="col-sm-6">
        <div class="btn-group btn-group-toggle float-right" data-toggle="buttons">
          <label class="btn btn-sm btn-primary btn-simple active" id="0" {{on "click" (fn this.updateTimeRange 'year')}}>
            <input type="radio" name="options" checked="">
            <span class="d-none d-sm-block d-md-block d-lg-block d-xl-block" style="font-size: 0.75em">Year</span>
            <span class="d-block d-sm-none price-label-small">
              Y
            </span>
          </label>
          <label class="btn btn-sm btn-primary btn-simple" id="1" {{on "click" (fn this.updateTimeRange 'month')}}>
            <input type="radio" class="d-none d-sm-none" name="options">
            <span class="d-none d-sm-block d-md-block d-lg-block d-xl-block" style="font-size: 0.75em">Month</span>
            <span class="d-block d-sm-none price-label-small">
            M
          </span>
          </label>
          <label class="btn btn-sm btn-primary btn-simple" id="2" {{on "click" (fn this.updateTimeRange 'week')}} >
            <input type="radio" class="d-none" name="options">
            <span class="d-none d-sm-block d-md-block d-lg-block d-xl-block" style="font-size: 0.75em">Week</span>
            <span class="d-block d-sm-none price-label-small">
              W
            </span>
          </label>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body">
    <canvas id="lineChartExample" height="296" {{did-insert this.setupChart}}></canvas>
  </div>
</div>