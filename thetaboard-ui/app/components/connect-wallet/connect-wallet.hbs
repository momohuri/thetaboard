<div class="wallet-address-search-container">
    <div>
        {{#if this.thetaSdk.currentAccount}}
            <input placeholder="Enter Wallet Adress" readonly  class="wallet-address-span" data-toggle="modal" data-target="#searchModal" value="{{this.thetaSdk.currentAccount}}"/>
            <button {{on 'click' this.connectWallet}} type="submit" class="connect-wallet-button btn btn-fill btn-primary btn-left">Connect to Wallet</button>
        {{else}}
            <input placeholder="Enter Wallet Adress"  readonly class="wallet-address-span" data-toggle="modal" data-target="#searchModal" value="{{this.thetaSdk.currentAccount}}"/>
            <button {{on 'click' this.connectWallet}} type="submit" class="connect-wallet-button btn btn-fill btn-primary btn-left">Connect to Wallet</button>
        {{/if}}
    </div>
</div>
